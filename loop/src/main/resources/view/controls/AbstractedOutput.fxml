<VBox xmlns:fx="http://javafx.com/fxml" fx:id="container" style="@../style.css">
    <HBox alignment="CENTER_LEFT" spacing="30">
        <Label text="GleichgewichtshÃ¤ufigkeit: " />
        <Label fx:id="equilibriumFrequencyLabel" />
        <Label fx:id="configSliderLabel"/>
        <Slider fx:id="configSlider"/>
    </HBox>
    <GridPane hgap="10">
        <VBox alignment="CENTER">
            <Label styleClass="card-subtitle" text="Effizienzverteilung der Konfigurationen " wrapText="true" />
            <BarChart fx:id="efficiencyChart" legendVisible="false">
                <xAxis>
                    <CategoryAxis side="BOTTOM" label="Efficiency"/>
                </xAxis>
                <yAxis>
                    <NumberAxis side="LEFT" label="Agent Count"/>
                </yAxis>
            </BarChart>
            <HBox>
                <Label styleClass="control-label" text="Mittelwert: " />
                <Label fx:id="meanEfficiencyLabel" />
            </HBox>
        </VBox>
        <VBox alignment="CENTER" GridPane.columnIndex="1">
            <Label styleClass="card-subtitle" text="Einstellungsdauer bis zum Gleichgewicht" />
            <BarChart fx:id="executedAdaptsChart" legendVisible="false">
                <xAxis>
                    <CategoryAxis side="BOTTOM" label="Executed Adaption Steps"/>
                </xAxis>
                <yAxis>
                    <NumberAxis side="LEFT" label="Agent Count"/>
                </yAxis>
            </BarChart>
            <HBox>
                <Label styleClass="control-label" text="Mittelwert: " />
                <Label fx:id="meanExecutedAdaptsLabel" />
            </HBox>
        </VBox>
        <columnConstraints>
            <ColumnConstraints percentWidth="50" />
            <ColumnConstraints percentWidth="50" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints />
        </rowConstraints>
    </GridPane>
    <Label fx:id="configSliderParameterLabel" />
    <ComboBox fx:id="consideredIterationsComboBox" />
    <ImageView fx:id="efficiencyBufferGifView" />
    <Rectangle fx:id="efficiencyBufferRectangle" />
    <ImageView fx:id="adaptsBufferGifView" />
    <Rectangle fx:id="adaptsBufferRectangle" />
</VBox>
