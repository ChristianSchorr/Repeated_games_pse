<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.shape.Rectangle?>
<?import org.controlsfx.glyphfont.Glyph?>

<HBox styleClass="task-card-green" xmlns:fx="http://javafx.com/fxml" fx:id="container">
    <Rectangle fill="#008A00" height="100" width="10"/>
    <VBox spacing="1" style="-fx-padding: 10 10 0 10; -fx-border-width: 2; -fx-border-color: #008A00">
        <HBox alignment="CENTER" spacing="10">
            <Glyph fontFamily="FontAwesome" fontSize="30" icon="CHECK" style="-fx-text-fill: #008A00"/>
            <Label style="-fx-text-fill: #008A00" styleClass="card-subtitle" fx:id="gameNameLabel"/>
            <Label style="-fx-text-fill: #008A00" styleClass="card-subtitle" fx:id="simulationIdLabel"/>
        </HBox>
        <HBox alignment="CENTER_LEFT" spacing="10">
            <Glyph fontFamily="FontAwesome" fontSize="20" icon="CLOCK_ALT"/>
            <Label text="Duration: "/>
            <Label fx:id="totalDurationLabel"/>
        </HBox>
        <HBox alignment="CENTER_LEFT" spacing="10">
            <Glyph fontFamily="FontAwesome" fontSize="20" icon="CALENDAR"/>
            <Label text="Finished:"/>
            <Label fx:id="finishedTimeLabel"/>
        </HBox>
    </VBox>
</HBox>
