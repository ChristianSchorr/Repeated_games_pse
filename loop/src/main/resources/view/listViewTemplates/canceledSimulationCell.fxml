<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.shape.Rectangle?>
<?import org.controlsfx.glyphfont.Glyph?>
<HBox styleClass="task-card-red" xmlns:fx="http://javafx.com/fxml" fx:id="container">
    <Rectangle fill="E51400" height="100" width="10"/>
    <VBox spacing="1" style="-fx-padding: 10 0 0 10">
        <HBox alignment="CENTER" spacing="10">
            <Glyph fontFamily="FontAwesome" fontSize="30" icon="TIMES" style="-fx-text-fill: #E51400"/>
            <Label style="-fx-text-fill: #E51400" styleClass="card-subtitle" fx:id="gameNameLabel"/>
            <Label style="-fx-text-fill: #E51400" styleClass="card-subtitle" fx:id="simulationIdLabel"/>
        </HBox>
        <HBox alignment="CENTER_LEFT" spacing="10">
            <Label style="-fx-text-fill: #E51400" styleClass="card-subtitle" text="Abgebrochen!"/>
        </HBox>
    </VBox>
</HBox>
