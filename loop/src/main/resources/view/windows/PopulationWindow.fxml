<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="625"
      prefWidth="800" style="-fx-background-color: #EAEAeA; -fx-padding: 10;" stylesheets="@../style.css"
      xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="loop.controller.PopulationController">
    <VBox prefWidth="780.0" spacing="10" styleClass="card">
        <GridPane>
            <columnConstraints>
                <ColumnConstraints percentWidth="80"/>
                <ColumnConstraints percentWidth="20"/>
            </columnConstraints>
            <VBox spacing="10">
                <Label styleClass="card-title" text="Population erstellen"/>
                <Label wrapText="true" styleClass="card-subtitle" text="Hier kÃ¶nnen neue und eigene Populationen aus vorhandenen Gruppen erstellt werden"/>
                <TextField fx:id="populationNameTextField" alignment="CENTER_LEFT" maxWidth="350" promptText="Name der Population"/>
                <TextField fx:id="populationDescriptionTextField" alignment="CENTER_LEFT"  promptText="Beschreibung"/>
            </VBox>
            <HBox alignment="CENTER" spacing="10" GridPane.columnIndex="1">
                <Button onAction="#resetPopulation" styleClass="setting-button">
                    <graphic>
                        <Glyph fontFamily="FontAwesome" fontSize="30" icon="ROTATE_LEFT" style="-fx-text-fill: grey"/>
                    </graphic>
                </Button>
                <Button onAction="#handleSavePopulationButton">
                    <graphic>
                        <Glyph fontFamily="FontAwesome" fontSize="30" icon="DOWNLOAD" style="-fx-text-fill: grey"/>
                    </graphic>
                </Button>
            </HBox>
            <rowConstraints>
                <RowConstraints/>
            </rowConstraints>
        </GridPane>

        <Separator style="-fx-padding: 10 0;"/>
        <HBox alignment="CENTER_LEFT" spacing="5" style="-fx-padding: 10">
            <Label text="Gruppe:"/>
            <ChoiceBox fx:id="groupSelectionBox" prefHeight="42.0" prefWidth="189.0"/>
            <Label text="Agentenzahl in der Gruppe:"/>
            <TextField fx:id="agentCountTextField" alignment="TOP_CENTER" maxWidth="50" promptText="100"/>
            <Button onAction="#handleAddGroupButton">
                <graphic>
                    <Glyph fontFamily="FontAwesome" icon="PLUS" style="-fx-text-fill: -swatch-500"/>
                </graphic>
            </Button>
        </HBox>
        <Separator style="-fx-padding: 10 0;"/>
        <FlowPane fx:id="groupPane" GridPane.columnIndex="1" hgap="10" vgap="10" />
        <Separator style="-fx-padding: 10 0;"/>
        <HBox spacing="10">
            <Label text="Gesamtzahl an Agenten:" style="-fx-font-weight: bold; -fx-font-size: 15pt"/>
            <Label fx:id="totalAgentCountLabel" style="-fx-text-fill: -swatch-500; -fx-font-weight: bold; -fx-font-size: 15pt"/>
        </HBox>
    </VBox>
</VBox>
