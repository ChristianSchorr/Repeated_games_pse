<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="625" prefWidth="800"
      style="-fx-background-color: #EAEAeA; -fx-padding: 10;" stylesheets="@../style.css" xmlns="http://javafx.com/javafx/8.0.172-ea"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="loop.controller.GroupController">
    <VBox prefWidth="780.0" spacing="10" styleClass="card">

        <GridPane>
            <columnConstraints>
                <ColumnConstraints percentWidth="80" />
                <ColumnConstraints percentWidth="20" />
            </columnConstraints>
            <VBox spacing="10">
                <Label styleClass="card-title" text="Create a new group" />
                <Label styleClass="card-subtitle" text="Here you can create new and own groups" />
                <TextField fx:id="groupNameTextField" alignment="CENTER_LEFT" maxWidth="350" promptText="Name of the group" />
                <TextField fx:id="descriptionTextField" alignment="CENTER_LEFT"  promptText="Description"/>
            </VBox>
            <HBox alignment="CENTER" spacing="10" GridPane.columnIndex="1">
                <Button onAction="#handleReset" styleClass="setting-button">
                    <graphic>
                        <Glyph fontFamily="FontAwesome" fontSize="30" icon="ROTATE_LEFT" style="-fx-text-fill: grey" />
                    </graphic>
                </Button>
                <Button onAction="#handleSave">
                    <graphic>
                        <Glyph fontFamily="FontAwesome" fontSize="30" icon="DOWNLOAD" style="-fx-text-fill: grey" />
                    </graphic>
                </Button>
            </HBox>
            <rowConstraints>
                <RowConstraints />
            </rowConstraints>
        </GridPane>

        <Separator style="-fx-padding: 10 0;" />

        <VBox spacing="10">
            <Label styleClass="card-subtitle" text="Segment configurations" />
            <GridPane hgap="50">
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" maxWidth="300.0" minWidth="10.0" />
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints minHeight="10.0" />
                    <RowConstraints minHeight="10.0" vgrow="ALWAYS" />
                </rowConstraints>
                <!-- <Slider fx:id="segmentProportionsSlider"/> -->
                <HBox alignment="CENTER_LEFT" spacing="20" GridPane.columnIndex="1" GridPane.rowIndex="0">
                    <Button onAction="#handleAddSegment" styleClass="rounded-button" text="+" />
                    <Label styleClass="control-label" text="Add segment" />
                </HBox>
                <HBox alignment="CENTER_LEFT" spacing="20" GridPane.columnIndex="2" GridPane.rowIndex="0">
                    <CheckBox fx:id="isCohesiveCheckBox" mnemonicParsing="false" text="Group is cohesive" />
                </HBox>
            </GridPane>
            <TabPane fx:id="segmentTabs"/>
        </VBox>

    </VBox>
</VBox>
